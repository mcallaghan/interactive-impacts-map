{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A plot of 2016 annual global precipitation data from the NOAA Climate Forecast System (CFS) v2.",
  "width": 600,
  "height": 300,
  "autosize": "fit-x",

  "signals": [
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {"events": "rect:mouseover", "update": "datum"},
        {"events": "rect:mouseout",  "update": "{}"}
      ]
    },
    {
      "name": "driverVar", "value": "all",
      "bind": {"input": "select", "name": "Driver: ", "options": [
        "all",
        "Temperature",
        "Precipitation"
      ]}
    },
    {
      "name": "con_width",
      "value": 600,
      "on": [
        {
          "events": {
            "source": "window",
            "type": "resize"
          },
          "update": "containerSize()[0]"
        }
      ]
    },
    {
      "name": "height",
      "value": "",
      "on": [
        {
          "events": {
            "source": "window",
            "type": "resize"
          },
          "update": "containerSize()[0]/2"
        }
      ]
    },
    {
      "name": "impactVar", "value": "all",
      "bind": {"input": "select", "name": "Impact: ", "options": [
        "all",
        "Coastal and marine Ecosystems",
        "Human and managed",
        "Mountains, snow and ice",
        "Rivers, lakes, and soil moisture",
        "Terrestrial ES",
        "Other systems"
      ]}
    }
  ],

  "data": [

    {"name":"cells",
      "url":"data/cells.json",
      "format": { "type": "json", "property": "features" },
      "transform": [
      ]
    },
    {
      "name": "ws_data",
      "url": "data/ws_data.json",
      "format": { "type": "json", "property": "features" },
      "transform": [
        { "type": "filter", "expr": "datum.properties.driver===driverVar"},
        { "type": "filter", "expr": "datum.properties.impact===impactVar"},
        {
          "type": "lookup",
          "from": "cells",
          "key": "index",
          "fields": ["index"],
          "values": ["geometry"],
          "as": ["geometry"]
        }
      ]
    },
    {
      "name": "world",
      "url": "data/world-110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "equalEarth",
      "scale": {"signal": "con_width*0.95/6"},
      "rotate": [0,0,0],
      "translate": {"signal": "[con_width/2, con_width/4]"}
    }
  ],

  "scales": [
    {
      "name": "Weighted studies",
      "type": "threshold",
      "domain": [0,0.5,1,2,5,10,20,50,100,200],
      "range": [
        "#fcfdbf",
        "#feca8d",
        "#fd9668",
        "#f1605d",
        "#cd4071",
        "#9e2f7f",
        "#721f81",
        "#440f76",
        "#180f3d"
      ]
    }
  ],

    "marks": [
      {
        "type": "shape",
        "clip": true,
        "from": {"data": "world"},
        "encode": {
          "update": {
            "strokeWidth": {"value": 1},
            "stroke": {"value": "black"}
          }
        },
        "transform": [
          {
            "type": "geoshape",
            "projection": "projection"
          }
        ]
      },
      {
        "type": "shape",
        "from": {"data": "ws_data"},
        "encode": {
          "enter": {
            "strokeWidth": {"value": 0.5},
            "opacity": {"value": 0.5},
            "tooltip": {"signal": "{'Latitude': datum.properties.LAT, 'Longitude': datum.properties.LON, 'Weighted studies': format(datum.properties.weight,'.3')}"}
          },
          "update": {
            "fill": {"scale": "Weighted studies", "field": "properties.weight"},
            "stroke": {"value": "lightgrey"}
          },
          "hover": { "stroke": {"value": "red"} }
        },
        "transform": [
          { "type": "geoshape", "projection": "projection" }
        ]
      }
    ]
}
